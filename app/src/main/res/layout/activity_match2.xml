<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Left images -->
        <ImageView
            android:id="@+id/imageLeft1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/image1" />

        <ImageView
            android:id="@+id/imageLeft2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="250dp"
            android:src="@drawable/image2" />

        <ImageView
            android:id="@+id/imageLeft3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="400dp"
            android:src="@drawable/image3" />

        <ImageView
            android:id="@+id/imageLeft4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="550dp"
            android:src="@drawable/image4" />

        <!-- Right images -->
        <ImageView
            android:id="@+id/imageRight1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/image1" />

        <ImageView
            android:id="@+id/imageRight2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="250dp"
            android:src="@drawable/image2" />

        <ImageView
            android:id="@+id/imageRight3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="400dp"
            android:src="@drawable/image3" />

        <ImageView
            android:id="@+id/imageRight4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="550dp"
            android:src="@drawable/image4" />

        <!-- Custom view to draw lines -->
        <com.ez.asteroid.ui.match2.LineView
            android:id="@+id/lineView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
